{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "mis-shared-types": ["shared/types/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist"]
}
